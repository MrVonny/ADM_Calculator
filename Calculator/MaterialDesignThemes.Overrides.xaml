<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                                     
                    xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf">
    <Style x:Key="MaterialDesignRaisedButton" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Control.FontFamily" Value="Verdana" />
        <Setter Property="Control.Margin" Value="1"></Setter>
        <Setter Property="Control.MinWidth" Value="20"></Setter>
        <Setter Property="Control.MinHeight" Value="20"></Setter>
    </Style>
    <Style x:Key="MaterialDesignRaisedLightButton" BasedOn="{StaticResource MaterialDesignRaisedLightButton}">
        <Setter Property="Control.FontFamily" Value="Verdana" />
        <Setter Property="Control.Margin" Value="1"></Setter>
        <Setter Property="Control.MinWidth" Value="20"></Setter>
        <Setter Property="Control.MinHeight" Value="20"></Setter>
    </Style>
</ResourceDictionary>